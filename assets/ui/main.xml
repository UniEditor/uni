<?xml version="1.0" encoding="utf-8" ?>
<vbox width="100%" height="100%" id="main">
		<style>
			MenuButton {
				fontSize: 14;
				color: 0x000000;
				paddingLeft: 5;
				paddingTop: 2;
				paddingBottom: 2;
				paddingRight: 5;
				iconPosition: "left";
				labelPosition: "center";
				spacing: 4;
			}
		
			Button {
				fontSize: 14;
				color: 0x000000;
				paddingLeft: 5;
				paddingTop: 2;
				paddingBottom: 2;
				paddingRight: 5;
				iconPosition: "left";
				labelPosition: "center";
				spacing: 4;
			}
		</style>
		
		<menubar style="autoSize:true">
			<vbox>
				<hbox>
					<menubutton text="File" id="menu-file">
						<menu>
							<menuitem id="menu-file-new" text="New" />
							<menuitem id="menu-file-open" text="Open..." />
							<menuitem id="menu-file-save" text="Save" condition="Client.target != 'flash'" />
							<menuitem id="menu-file-save-as" text="Save As..." />
							
							<menu text="Recent Files" id="menu-file-recent" condition="Client.target != 'flash'">
								<menuitem id="" text="SPARQL INSERT.txt" />
								<menuitem id="" text="SPARQL.txt" />
								<menuitem id="" text="test file.txt" />
							</menu>
							
							<menuitem id="menu-file-exit" text="Exit" condition="Client.target != 'flash'"/>
						</menu>
					</menubutton>
					
					<menubutton text="Edit" id="menu-edit">
						<menu/>
					</menubutton>
					
					<menubutton text="Project" id="menu-project">
						<menu/>
					</menubutton>
					
					<menubutton text="View" id="menu-view">
						<menu/>
					</menubutton>
					
					<menubutton text="Exporters" id="menu-exporter">
						<menu/>
					</menubutton>
					
					<menubutton text="Extension" id="menu-ext">
						<menu/>
					</menubutton>
					
					<menubutton text="Help" id="menu-help">
						<menu/>
					</menubutton>
				</hbox>
			</vbox>
		</menubar>
		
		
		
		
		<box width="100%" height="100%" id="mainBox" style="backgroundColor: 0xdfdddd">
		</box>
		
</vbox>

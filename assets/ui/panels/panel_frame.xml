<?xml version="1.0" encoding="utf-8" ?>
<vbox width="100" height="100" id="main" style="backgroundColor: 0x999999">
	<style>
			Button {
				fontSize: 13;
				fontName: "_sans";
				color: 0x000000;
				paddingLeft: 5;
				paddingTop: 2;
				paddingBottom: 2;
				paddingRight: 5;
				backgroundImage: "styles/windows/button.png";
				backgroundImageScale9: 5,5,15,15;
				backgroundImageRect: 0,0,20,20;
				iconPosition: "left";
				labelPosition: "center";
				spacing: 5;
			}

			Button:over {
				backgroundImage: "styles/windows/button.png";
				backgroundImageScale9: 5,5,15,15;
				backgroundImageRect: 20,0,20,20;
			}

			Button:down {
				backgroundImage: "styles/windows/button.png";
				backgroundImageScale9: 5,5,15,15;
				backgroundImageRect: 40,0,20,20;
			}
	</style>
	
	<hbox width="100%" height="20" id="headerBar" style="backgroundColor: 0x666666">
		<button id="header_btn" width="16" height="16" />
	</hbox>
	<hbox width="100%" height="100%" id="headerBar2" style="backgroundColor: 0x999999"/>
	
	
	<hbox width="100%" height="20" id="bottomRow">
		<spacer width="100%" />
		<box width="10" height="10" id="dragger" style="backgroundColor: 0x000000"/>
	</hbox>
</vbox>
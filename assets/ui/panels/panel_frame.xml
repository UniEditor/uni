<?xml version="1.0" encoding="utf-8" ?>
<vbox width="100" height="100">
	<style>
		.overall {
				backgroundColor: 0x999999;
				spacing: 0;
				borderColor: 0x666666;
				borderSize: 1;
				paddingLeft: 1;
				paddingTop: 0;
				paddingBottom: 0;
				paddingRight: 1;
		}
		
		Button.close {
			fontSize: 13;
			fontName: "_sans";
			paddingLeft: 5;
			paddingTop: 2;
			paddingBottom: 2;
			paddingRight: 5;
			backgroundImage: "img/panel_design_btn_close1.png";
			iconPosition: "left";
			labelPosition: "center";
			spacing: 5;
		}
		
		Button.close:over {
			backgroundImage: "img/panel_design_btn_close2.png";
		}

		Button.close:down {
			backgroundImage: "img/panel_design_btn_close3.png";
		}
		
		Text.title {
			fontSize: 14;
			fontName: "_sans";
			color: 0xFFFFFF;
		}
		
		.header{
			backgroundColor: 0x666666;
			paddingLeft: 0;
			paddingTop: 0;
			paddingBottom: 0;
			paddingRight: 0;
		}
		
		.bgPanel {
			backgroundColor: 0x999999;
		}
	</style>
	
	<vbox id="main" width="100%" height="100%" styleName = "overall">
		<hbox id="headerBar" width="100%" height="20" styleName="header">
			<image id="header_icon" width="16" height="16"/>
			<text id="header_title" styleName="title"/>
			<spacer width="100%" />
			<button id="btn_close" width="16" height="16" styleName="close"/>
		</hbox>
		
		<hbox id="content" width="100%" height="100%" styleName="bgPanel"/>
		
		<hbox id="bottomRow" width="100%" height="20" >
			<spacer width="100%" />
			<box id="dragger" width="10" height="10" style="backgroundColor: 0x000000"/>
		</hbox>
	</vbox>
</vbox>
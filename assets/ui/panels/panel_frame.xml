<?xml version="1.0" encoding="utf-8" ?>
<vbox width="100%" height="100%">
	<style>
		.overall {
			backgroundColor: 0x4F4F4F;
			spacing: 0;
			borderColor: 0x232323;
			borderSize: 1;
			paddingLeft: 1;
			paddingTop: 0;
			paddingBottom: 0;
			paddingRight: 1;
			filter:none;
		}
		
		Button.close {
			paddingLeft: 5;
			paddingTop: 2;
			paddingBottom: 2;
			paddingRight: 5;
			backgroundImage: "img/img_btn_close1.png";
			backgroundAlpha:0;
			iconPosition: "left";
			spacing: 5;
			filter:none;
			borderColor: -1;
			verticalAlignment: "center";
		}
		
		Button.close:over {
			backgroundImage: "img/img_btn_close2.png";
		}

		Button.close:down {
			backgroundImage: "img/img_btn_close3.png";
		}
		
		Text.title {
			fontSize: 14;
			fontName: "_sans";
			color: 0xFFFFFF;
		}
		
		.header{
			backgroundColor: 0x232323;
			paddingLeft: 0;
			paddingTop: 0;
			paddingBottom: 0;
			paddingRight: 0;
		}
		
		.bgPanel {
			backgroundColor: 0x999999;
		}
	</style>
	
	<vbox id="main" width="100%" height="100%" styleName = "overall" style="filter:dropShadow(2, 45, 0x000000, 1, 4, 4, 1, 3);">
		<hbox id="headerBar" width="100%" height="20" styleName="header">
			<image id="header_icon" resource="img/panel_design_ico_log.png" width="16" height="16" style="verticalAlignment: 'center'; paddingLeft: 3;"/>
			<text id="header_title" styleName="title"/>
			<spacer width="100%" />
			<button id="btn_close" width="16" height="16" styleName="close"/>
		</hbox>
		
		<hbox id="content" width="100%" height="100%" styleName="bgPanel"/>
		
		<!--hbox id="bottomRow" width="100%" height="20" >
			<spacer width="100%" />
			<box id="dragger" width="10" height="10" style="backgroundColor: 0x000000"/>
		</hbox-->
	</vbox>
</vbox>